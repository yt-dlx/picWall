{
  "expo": {
    "version": "1.0.0",
    "owner": "shovit",
    "slug": "picWall",
    "name": "picWall",
    "scheme": "picWall",
    "orientation": "portrait",
    "newArchEnabled": true,
    "userInterfaceStyle": "automatic",
    "icon": "./src/assets/images/logo.png",
    "experiments": { "typedRoutes": true },
    "ios": {
      "supportsTablet": true,
      "requiresFullScreen": true,
      "bundleIdentifier": "com.shovit.picWall",
      "infoPlist": {
        "NSPhotoLibraryAddUsageDescription": "picWall: needs permission to save photos to your library.",
        "NSPhotoLibraryUsageDescription": "picWall: requires access to your photo library to save images."
      }
    },
    "web": { "output": "static", "bundler": "metro", "favicon": "./src/assets/images/logo.png" },
    "extra": { "router": { "origin": false }, "eas": { "projectId": "4e44ff76-5be9-4d48-be0c-2cdc7ccf7e33" } },
    "android": {
      "versionCode": 1,
      "requiresFullScreen": true,
      "package": "com.shovit.picWall",
      "adaptiveIcon": { "backgroundColor": "#0C0C0C", "foregroundImage": "./src/assets/images/logo.png" },
      "permissions": ["READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE", "SET_WALLPAPER "]
    },
    "plugins": [
      "expo-router",
      ["expo-splash-screen", { "imageWidth": 200, "resizeMode": "contain", "backgroundColor": "#0C0C0C", "image": "./src/assets/images/logo.png" }],
      ["expo-font", { "fonts": ["./src/assets/fonts/Kurale_Regular.ttf", "./src/assets/fonts/Lobster_Regular.ttf", "./src/assets/fonts/Dm_Serif_Display_Regular.ttf"] }],
      ["react-native-google-mobile-ads", { "androidAppId": "ca-app-pub-9464475307933754~8430751878", "iosAppId": "ca-app-pub-9464475307933754~8362173967" }]
    ]
  }
}
